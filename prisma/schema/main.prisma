generator client {
    provider = "prisma-client"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
}

// Global User Model
model User {
    id    String @id @default(uuid())
    email String @unique

    // Relations to game-specific builds
    // (Prisma automatically finds "ZZZBuild" even if it's in another file)
    zzzBuilds ZZZBuild[]
}
